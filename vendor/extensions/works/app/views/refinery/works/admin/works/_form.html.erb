<%= form_for [refinery, :works_admin, @work] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @work,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>

  <div class='field'>
    <%= f.label :service -%>
    <%= f.collection_select :service_type, Refinery::Services::Service.all, :name, :name  -%>
  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/works/work", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :photo_1 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_1_id,
               :image => @work.photo_1,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :photo_2 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_2_id,
               :image => @work.photo_2,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :photo_3 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_3_id,
               :image => @work.photo_3,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :photo_4 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_4_id,
               :image => @work.photo_4,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :photo_5 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_5_id,
               :image => @work.photo_5,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :photo_6 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_6_id,
               :image => @work.photo_6,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :photo_7 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_7_id,
               :image => @work.photo_7,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :photo_8 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_8_id,
               :image => @work.photo_8,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.works.admin.works.work'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @work.title) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
